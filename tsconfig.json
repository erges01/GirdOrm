{
  "compilerOptions": {
    "target": "ES2020",         // Good balance of features vs compatibility
    "module": "CommonJS",       // Required for standard Node.js execution
    "moduleResolution": "node", // Uses standard Node module lookup
    "outDir": "./dist",         // Where the built files go
    "rootDir": "./src",         // Keeps the folder structure clean
    "declaration": true,        // IMPORTANT: Generates .d.ts files so users get IntelliSense
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}